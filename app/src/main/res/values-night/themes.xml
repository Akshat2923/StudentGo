<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode -->
    <style name="Theme.StudentGo" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color for Night Mode -->
        <item name="colorPrimary">@color/sage_green</item>
        <item name="colorPrimaryVariant">@color/light_sage</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color for Night Mode -->
        <item name="colorSecondary">@color/light_sage</item>
        <item name="colorSecondaryVariant">@color/sage_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color for Night Mode -->
        <item name="android:statusBarColor">@color/dark_green</item>

        <!-- Text color on background for Night Mode -->
        <item name="android:textColor">@color/white</item>

        <!-- Bottom Navigation Colors -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Additional Material theme attributes -->
        <item name="colorSurface">@color/dark_green</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:windowBackground">@color/dark_green</item>
    </style>
</resources>